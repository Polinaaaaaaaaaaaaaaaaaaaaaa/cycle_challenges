#include <stdio.h>
int main(void) {
    int hp, lection;
    char knowledge;
    // Проверка HP
    printf("Введите hp: ");
    scanf("%d", &hp);

    if (hp > 70) {
        printf("Студент в отличной форме\n");
    } else if (hp > 30) {
        printf("Студент устал\n");
    } else {
        printf("Студент в опасности\n");
    }

    // Проверка лекций и знаний
    printf("Введите количество лекций и знание (H/N): ");
    scanf("%d %c", &lection, &knowledge);

    if (lection >= 50 && knowledge == 'H') {
        printf("Можно купить знания\n");
    } else if (!(knowledge == 'H')) { // использование !
        printf("Недостаточно ресурсов (нет знаний)\n");
    } else {
        printf("Недостаточно ресурсов (мало лекций)\n");
    }

    // Вывод чисел от 1 до 20, пропуская кратные 3
    printf("Числа от 1 до 20 без кратных 3:\n");
    for (int i = 1; i <= 20; i++) {
        if (i % 3 == 0) continue;
        printf("%d ", i);
    }
    printf("\n");

    // Факториал числа 7
    int fact = 1;
    for (int i = 1; i <= 7; i++) {
        fact *= i;
    }
    printf("Факториал 7 = %d\n", fact);

    return 0;
}
